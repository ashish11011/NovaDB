<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="index.css">


    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />


    <title>Nova Database</title>
</head>
<body>


    <div id="mainContainer" >
        <h1 id="mainHeading" >Nova Database</h1>
        <div id="innerContainer" >
            <h3 id="innerHeading" >Fibers</h3>
            <% if (locals.allFibers) { %>
                <% locals.allFibers.map((fiber, index) => {  %>
                    <div class="fiberItem" >
                        <form class="formUpperContainer " method="get" action="/history/<%= fiber.name %>" >
                            <h3 class="listHeading" ><%= fiber.name %></h3>
                            <div class="upperRight">
                                <h3 ><%= fiber.count %></h3>
                                <button style="background: none; border: none; color: #fff; font-size: 1rem;" type="submit" value="Search">
                                    <i class="fas fa-history"></i> 
                                </button>
                                
                            </div>
                        </form>
                    </div>
                <% }); %>
            <% } %>

            <div class="fiberItem" id="inputOuterDiv">
                <form class="formUpperContainer " method="post" action="/" >
                    <input id="inputAddNewFiber" name="fiberName" placeholder="Add fiber name" />
                    <div class="upperRight">
                        <h3></h3>
                        <!-- <i onclick="submit" class="fa fa-plus" aria-hidden="true"></i> -->
                        <button style="background: none; border: none; color: #fff; font-size: 1rem;" type="submit" value="Search">
                            <i class="fas fa-plus"></i> 
                        </button>
                    </div>
                </form>
            </div>
    
    </div>


    <!-- <script src="./script.js"></script> -->
</body>
</html>